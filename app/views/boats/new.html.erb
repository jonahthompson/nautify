<div class="container">
	<div class="row">
		<div class="col"></div>
		<div class="col-10">
			<h2>New Boat</h2>
			<%= form_for @boat do |f| %>
				<%= f.label :name, "Name" %>
				<%= f.text_field :name %>
				<%= f.label :capacity, "Capacity" %>
				<%= f.text_field :capacity %>
				<%= f.label :location, "Location" %>
				<%= f.text_field :location %>
				<%= f.submit "Submit" %>
			<% end %>
		</div>
		<div class="col"></div>
	</div>
</div>